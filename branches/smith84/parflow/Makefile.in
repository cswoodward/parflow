default: parflowexe

include ./config/Makefile.config

SUBDIR  = .
SRCDIR  = @srcdir@
OBJECT  = .

SUBDIRS = amps parflow_lib parflow

INSTALL	    = sh @srcdir@/config/install-sh
INSTDIR	    = @INSTDIR@

parflowexe:
	( cd amps && $(MAKE) amps) || exit 1
	( cd parflow_lib && $(MAKE) parflowlib) || exit 1
	( cd parflow && $(MAKE) ) || exit 1

veryclean:

clean:
	@for DIR in $(SUBDIRS); do if test -d $$DIR; then (cd $$DIR && $(MAKE) $@) ; fi || exit 1; done
	@$(PARFLOW_CLEAN)

install:
	$(INSTALL) -d -m 755 $(INSTDIR)/config
	$(INSTALL) -d -m 755 $(INSTDIR)/lib
	$(INSTALL) -d -m 755 $(INSTDIR)/bin

